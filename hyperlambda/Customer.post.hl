
// CRUD Hyperlambda endpoint that creates one record in your Customer table in your chinook database
.arguments

   // CustomerId column value
   CustomerId:long

   // FirstName column value
   FirstName:string

   // LastName column value
   LastName:string

   // Company column value
   Company:string

   // Address column value
   Address:string

   // City column value
   City:string

   // State column value
   State:string

   // Country column value
   Country:string

   // PostalCode column value
   PostalCode:string

   // Phone column value
   Phone:string

   // Fax column value
   Fax:string

   // Email column value
   Email:string

   // SupportRepId column value
   SupportRepId:long

// Type of endpoint
.type:crud-create

// Verifying user is authorized to access endpoint.
auth.ticket.verify:root,admin

// Opening up database connection.
data.connect:[generic|chinook]
   database-type:sqlite

   // Parametrising our create invocation.
   add:x:./*/data.create/*/values
      get-nodes:x:@.arguments/*

   // Creating our record.
   data.create
      database-type:sqlite
      table:Customer
      return-id:bool:false
      values

   // Returning the correct status code.
   response.status.set:201

   // Returning result of above invocation to caller.
   unwrap:x:+/*
   return
      result:success
