.arguments
   employee_id:int
data.connect:hr_db
   database-type:mysql

   // Updating the employee's department and salary.
   data.update
      database-type:mysql
      table:employees
      values
         department:Finance
         salary:decimal:75000.00
      where
         and
            employee_id.eq:x:@.arguments/*/employee_id
