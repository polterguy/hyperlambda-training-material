
// Provide a Hyperlambda example where [.lambda] runs if any of the conditions hold true.

// Runs [.lambda] if any of the conditions hold true.
.state
.check1:int:2
.check2:int:8
if
   or

      // First condition: Less than
      lt:x:@.check1
         .:int:3

      // Second condition: More than
      mt:x:@.check2
         .:int:7
   .lambda

      // Updating [.state] to true
      set-value:x:@.state
         .:bool:true
else

   // Updating [.state] to false
   set-value:x:@.state
      .:bool:false
