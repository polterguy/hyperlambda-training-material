
// Generate a Hyperlambda snippet that counts users in the 'auth_db' database from the 'users' table.

// Counts users in the "auth_db" database from the "users" table.
data.connect:auth_db
   database-type:mysql

   // Counting total users.
   data.read
      database-type:mysql
      table:users
      columns
         count(*)
            as:count
      limit:long:1
