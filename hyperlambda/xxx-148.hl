
// Create a Hyperlambda script to display employee productivity as a pie chart using data from a database.
.name:Employee productivity
.description:Closed activities by user for current month
.enabled:bool:false
.type:pie
.lambda
   data.connect:[generic|robo-crm]
      date.now
      date.format:x:-
         format:yyyy-MM-00
      data.select:"\nselect username as name, count(*) as value\n   from activities\n      where closed > @date\n   group by username"
         @date:x:@date.format
      return-nodes:x:-/*
