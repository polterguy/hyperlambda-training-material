
// Create a Hyperlambda script to ensure a specified 'arg' matches a specified 'regex'. Validate mandatory fields.
.arguments
   arg
      type:string
      mandatory:bool:true
   regex
      type:string
      mandatory:bool:true
.icon:shield

// Invoking validator.
validators.regex:x:@.arguments/*/arg
   regex:x:@.arguments/*/regex
