
// Updates an existing item in your cloudlets table in your [generic|hub] database according to the specified arguments.
.arguments
   id:long
   name:string
   plan:string
   cluster:string
   user:string
.description:Updates an existing item in your cloudlets table in your [generic|hub] database according to the specified arguments
.type:crud-update

// Verifying user is authorized to access endpoint.
validators.mandatory:x:@.arguments/*/id
auth.ticket.verify:root
.foreign-keys
   .
      column:plan
      table:plans
      foreign_column:name
      foreign_name:name
      long:bool:false
   .
      column:cluster
      table:clusters
      foreign_column:id
      foreign_name:id
      long:bool:false

// Opening up our database connection.
data.connect:[generic|hub]
   add:x:./*/data.update/*/where/*/and
      get-nodes:x:@.arguments/*/[0,1]
   add:x:./*/data.update/*/values
      get-nodes:x:@.arguments/*/[1,1000]

   // Invoking our update slot.
   data.update
      table:cloudlets
      values
      where
         and

   // Verifying record exists.
   if
      eq
         get-value:x:@data.update
         .:int:0
      .lambda
         response.status.set:404
         return
            result:Record not found

   // Returning success to caller.
   response.status.set:202
   unwrap:x:+/*
   return
      affected:x:@data.update
