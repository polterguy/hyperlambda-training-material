// Counts transactions in the "finance_db" database from the "transactions" table.
data.connect:finance_db
   database-type:pgsql

   // Counting total transactions.
   data.read
      database-type:pgsql
      table:transactions
      columns
         count(*)
            as:count
      limit:long:1


